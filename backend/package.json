{
  "name": "profitagent-backend",
  "version": "1.0.0",
  "description": "ProFitAgent - Backend API for investment management platform",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "prisma:deploy": "prisma migrate deploy && prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "db:setup": "prisma migrate dev --name init && npm run prisma:seed",
    "db:import:local": "node clean-and-import.js",
    "db:prepare-and-import": "npm run prisma:deploy && npm run db:import:local",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "profitagent",
    "investment",
    "api",
    "backend"
  ],
  "author": "ProFitAgent Team",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@types/pg": "^8.15.5",
    "axios": "^1.11.0",
    "axios-cookiejar-support": "^6.0.4",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "tough-cookie": "^6.0.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.14.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
