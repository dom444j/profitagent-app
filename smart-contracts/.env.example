# ProFitAgent Smart Contracts Environment Configuration

# =============================================================================
# PRIVATE KEYS & ACCOUNTS
# =============================================================================

# Private key del deployer (SIN el prefijo 0x)
# ⚠️ NUNCA commitear la private key real al repositorio
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Mnemonic alternativo (opcional)
MNEMONIC=your twelve word mnemonic phrase here

# =============================================================================
# RPC ENDPOINTS
# =============================================================================

# BSC Mainnet RPC
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
# Alternativas:
# BSC_RPC_URL=https://bsc-dataseed2.binance.org/
# BSC_RPC_URL=https://bsc-dataseed3.binance.org/
# BSC_RPC_URL=https://bsc-dataseed4.binance.org/

# BSC Testnet RPC
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
# Alternativas:
# BSC_TESTNET_RPC_URL=https://data-seed-prebsc-2-s1.binance.org:8545/

# =============================================================================
# API KEYS
# =============================================================================

# BSCScan API Key para verificación de contratos
# Obtener en: https://bscscan.com/apis
BSCSCAN_API_KEY=your_bscscan_api_key_here

# CoinMarketCap API Key para gas reporter (opcional)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# =============================================================================
# SYSTEM WALLETS
# =============================================================================

# Wallet del Treasury (recibe fees del sistema)
TREASURY_WALLET=0x742d35Cc6634C0532925a3b8D4C9db96C4b5Da5e

# Wallet de Operaciones (gastos operativos)
OPERATIONS_WALLET=0x742d35Cc6634C0532925a3b8D4C9db96C4b5Da5e

# Wallet de Emergencia (para retiros de emergencia)
EMERGENCY_WALLET=0x742d35Cc6634C0532925a3b8D4C9db96C4b5Da5e

# =============================================================================
# TOKEN ADDRESSES
# =============================================================================

# USDT en BSC Mainnet
USDT_BSC_MAINNET=0x55d398326f99059fF775485246999027B3197955

# USDT en BSC Testnet
USDT_BSC_TESTNET=0x7ef95a0FEE0Dd31b22626fF2be2D586aA8D0756f

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Red por defecto para deployment
DEFAULT_NETWORK=bscTestnet

# Gas price en gwei (opcional, se usa el de la red por defecto)
GAS_PRICE=5

# Gas limit (opcional)
GAS_LIMIT=8000000

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Webhook para notificaciones de deployment
DEPLOYMENT_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email para alertas
ALERT_EMAIL=admin@profitagent.app

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Habilitar reporte de gas
REPORT_GAS=true

# Habilitar coverage
SOLIDITY_COVERAGE=true

# Nivel de optimización del compilador
OPTIMIZER_RUNS=200

# =============================================================================
# AGENT ADDRESSES (Se actualizan después del deployment)
# =============================================================================

# Dirección del agente de arbitraje cripto
CRYPTO_ARBITRAGE_AGENT=0x0000000000000000000000000000000000000000

# Dirección del agente de surebet
SUREBET_AGENT=0x0000000000000000000000000000000000000000

# Dirección del agente de grid trading
GRID_TRADING_AGENT=0x0000000000000000000000000000000000000000

# Dirección del agente de DeFi yield farming
DEFI_YIELD_AGENT=0x0000000000000000000000000000000000000000

# Dirección del agente de scalping
SCALPING_AGENT=0x0000000000000000000000000000000000000000

# Dirección del agente de market making
MARKET_MAKING_AGENT=0x0000000000000000000000000000000000000000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Habilitar verificación automática de contratos
AUTO_VERIFY=true

# Tiempo de espera para confirmaciones (en bloques)
CONFIRMATIONS=3

# Habilitar pausas de emergencia
EMERGENCY_PAUSE_ENABLED=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Dirección de prueba para tests
TEST_WALLET=0x742d35Cc6634C0532925a3b8D4C9db96C4b5Da5e

# Cantidad de USDT para tests (en wei)
TEST_USDT_AMOUNT=1000000000000000000000

# Fork de mainnet para tests (opcional)
FORK_MAINNET=false
FORK_BLOCK_NUMBER=latest

# =============================================================================
# NOTAS IMPORTANTES
# =============================================================================

# 1. NUNCA commitear este archivo con valores reales al repositorio
# 2. Usar .env.local para desarrollo local
# 3. Usar variables de entorno del sistema en producción
# 4. Rotar las private keys regularmente
# 5. Usar hardware wallets para mainnet
# 6. Verificar todas las direcciones antes del deployment
# 7. Realizar pruebas exhaustivas en testnet primero
# 8. Tener un plan de respuesta a emergencias
# 9. Monitorear los contratos después del deployment
# 10. Mantener backups seguros de las configuraciones